<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xeldax.signeveryday.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/sign_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/long_date"
        android:layout_alignStart="@+id/long_date"
        android:layout_alignTop="@+id/textView6"
        android:text="1天"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="84dp"
        android:text="连续签到时间"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="113dp"
        android:text="最长签到时间"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="126dp"
        android:text="失败次数"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连续签到时间"
        android:textSize="24sp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/fail_count"
        android:layout_alignEnd="@+id/fail_count"
        android:layout_marginRight="95dp"
        android:layout_marginEnd="95dp" />

    <TextView
        android:id="@+id/fail_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0次"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <TextView
        android:id="@+id/long_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1天"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/fail_count"
        android:layout_alignStart="@+id/fail_count" />
</RelativeLayout>
